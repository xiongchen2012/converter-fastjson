    <organization>
  	    <name>deathdealer</name>
  	    <url>https://github.com/xiongchen2012</url>
    </organization>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <tag>master</tag>
        <connection>scm:git:https://github.com/xiongchen2012/converter-fastjson.git</connection>
        <developerConnection>scm:git:https://github.com/xiongchen2012/converter-fastjson.git</developerConnection>
        <url>https://github.com/xiongchen2012/converter-fastjson</url>
    </scm>

    <developers>
        <developer>
            <name>deathdealer</name>
            <email>xiongchen2046@163.com</email>
            <organization>Fujitsu</organization>

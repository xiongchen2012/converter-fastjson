        </developer>
    </developers>

    <dependencies>
  	    <dependency>
	        <groupId>com.squareup.retrofit2</groupId>
	        <artifactId>retrofit</artifactId>
	        <version>2.0.2</version>
	    </dependency>

        <dependency>
            <groupId>com.alibaba</groupId>
            <artifactId>fastjson</artifactId>
            <version>1.2.11</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

	<distributionManagement>
